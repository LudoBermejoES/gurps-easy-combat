<style>
  .nostyles {
    all: initial;
    font-family: "Roboto", sans-serif;
    font-size: small;
    font-weight: normal;
  }

  .nostyles input[type=checkbox] {
    vertical-align: middle;
    position: relative;
    bottom: 1px;
  }

  .nostyles label {
    display: block;

  }
</style>
<div>
  <div>¡Te están atacando! Escoge tu defensa!</div>
  <br>
  <div class="nostyles">
    <label>
      <input type="checkbox" id="feverishDefense" {{ checked data.feverishDefense}}/>Gastas un punto de fatiga para ganar un +2 en la defensa que escojas
    </label>
  </div>
  <div class="nostyles">
    <label>
      <input type="checkbox" id="retreatDefense" {{ checked data.retreatDefense}} class="onlyOne"/>Retrocedes un paso para ganar +3 a Esquivar (o un +1 a Parar y Bloquear). Tendrás un -2 al Ataque en el
      próximo turno
    </label>
  </div>
  <div class="nostyles">
    <label>
      <input type="checkbox" id="proneDefense" {{ checked data.proneDefense}} class="onlyOne"/>Te tiras al suelo y ganas un +3 a Esquivar (pero acabas tumbado). Útil en ataques a distancia
    </label>
  </div>
  <br>
  {{#if canDodge}}
    <h2>Esquiva</h2>
    <table id="dodges">
      <tr class="clickable" id="dodge" index="0">
        <td>Esquivar</td>
        <td>{{dodge}}</td>
        <td>¡Intenta esquivar el golpe!</td>
      </tr>
      {{#if acrobaticDodge}}
        <tr class="clickable" id="acrobatic-dodge" index="1">
          <td>
            Esquiva acrobática
          </td>
          <td>
            {{ acrobaticDodge.level }}
          </td>
          <td>
            Se tirará Acrobacias, con un éxito +2 a Esquiva, con un fallo -2 a Esquiva
          </td>
        </tr>
      {{/if}}
    </table>
  {{/if}}

  {{#if canParry}}
    {{#if parries.items.length}}
      <h2>Paradas</h2>
      {{> choiceTable parries}}
    {{/if}}
  {{/if}}
  {{#if canBlock}}
    {{#if blocks.items.length}}
      <h2>Bloqueos</h2>
      {{> choiceTable blocks}}
    {{/if}}
  {{/if}}

</div>

